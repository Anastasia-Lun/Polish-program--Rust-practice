9. ğŸŒŸğŸŒŸ

fn main() {
    let mut sum = 0;
    for i in -3..2 {
        sum += i;
    }

    assert!(sum == -5);

    for c in 97..=122 {
        println!("{}", c);
    }
}

10. ğŸŒŸğŸŒŸ

use std::ops::{Range, RangeInclusive};

fn main() {
    assert_eq!((1..5), Range { start: 1, end: 5 });
    assert_eq!((1..=5), RangeInclusive::new(1, 5));

    println!("Success!");
}

11. ğŸŒŸ

fn main() {
    assert!(1u32 + 2 == 3);

    assert!(1i32 - 2 == -1);

    assert!(1u8.wrapping_sub(2) == 255);

    assert!(3 * 50 == 150);

    let v = 9.6_f64 / 3.2_f64;
    assert!((v - 3.0_f64).abs() < 1e-10);

    assert!(24 % 5 == 4);

    println!("Success!");
}

