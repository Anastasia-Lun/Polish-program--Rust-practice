    println!("{}", c);
}

3. ğŸŒŸ

fn main() {
    let _f: bool = false;

    let t = true;
    if t {
        println!("Success!");
    }
}

4. ğŸŒŸ

fn main() {
    let f = true;
    let t = true || false;
    assert_eq!(t, f);

    println!("Success!");
}

5. ğŸŒŸğŸŒŸ

fn main() {
    let _v: () = ();

    let v = implicitly_ret_unit();
    assert_eq!(v, ());

    println!("Success!");
}

fn implicitly_ret_unit() {
    println!("I will return a ()");
}

fn explicitly_ret_unit() -> () {
    println!("I will return a ()");
}

6. ğŸŒŸğŸŒŸ

use std::mem::size_of_val;

fn main() {
    let unit: () = ();
    assert!(size_of_val(&unit) == 0);

    println!("Success!");
}

Statements and Expressions

1. ğŸŒŸğŸŒŸ

fn main() {
    let v = {
        let mut x = 1;
        x += 2;
        x
    };

    assert_eq!(v, 3);

    println!("Success!");
}

2. ğŸŒŸ

fn main() {
    let v = {
        let x = 3;
        x
    };

    assert!(v == 3);

    println!("Success!");
}

3. ğŸŒŸ

fn main() {
    let s = sum(1 , 2);
    assert_eq!(s, 3);

    println!("Success!");
}

fn sum(x: i32, y: i32) -> i32 {
    x + y
}

Functions

1. ğŸŒŸğŸŒŸğŸŒŸ

fn main() {

    let (x, y) = (1, 2);
    let s = sum(x, y);

    assert_eq!(s, 3);

    println!("Success!");
}

fn sum(x: i32, y: i32) -> i32 {
    x + y
}

