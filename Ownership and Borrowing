6. ðŸŒŸ

fn main() {
    let s = String::from("Hello ");

    let mut s1 = s;

    s1.push_str("World!");

    println!("Success!");
}

7. ðŸŒŸðŸŒŸðŸŒŸ

fn main() {
    let x = Box::new(5);

    let y = &mut 0;

    *y = 4;

    assert_eq!(*x, 5);

    println!("Success!");
}

8. ðŸŒŸ

fn main() {
   let t = (String::from("hello"), String::from("world"));

   let _s = t.0;

   println!("{:?}", t.1);
}

9. ðŸŒŸðŸŒŸ

fn main() {
   let t = (String::from("hello"), String::from("world"));

   let (ref s1, ref s2) = t;

   println!("{:?}, {:?}, {:?}", s1, s2, t);
}

Reference and Borrowing

1. ðŸŒŸ

fn main() {
    let x = 5;
    let p = &x;

    println!("the memory address of x is {:p}", p);
}

2. ðŸŒŸ

fn main() {
    let x = 5;
    let y = &x;

    assert_eq!(5, *y);

    println!("Success!");
}

3. ðŸŒŸ

fn main() {
    let mut s = String::from("hello, ");

    borrow_object(&s);

    println!("Success!");
}

fn borrow_object(s: &String) {}

4. ðŸŒŸ

fn main() {
    let mut s = String::from("hello, ");

    push_str(&mut s);

    println!("Success!");
}

fn push_str(s: &mut String) {
    s.push_str("world")
}

5. ðŸŒŸðŸŒŸ

fn main() {
    let mut s = String::from("hello, ");

    let p = &mut s;

    p.push_str("world");

    println!("Success!");
}

6. ðŸŒŸðŸŒŸðŸŒŸ

fn main() {
    let c = 'ä¸­';

    let r1 = &c;
    let ref r2 = c;

    assert_eq!(*r1, *r2);

    assert_eq!(get_addr(r1), get_addr(r2));

    println!("Success!");
}

fn get_addr(r: &char) -> String {
    format!("{:p}", r)
}

7. ðŸŒŸ

fn main() {
    let mut s = String::from("hello");

    let r1 = &s;
    let r2 = &s;

    println!("{}, {}", r1, r2);

    println!("Success!");
}

8. ðŸŒŸ

fn main() {
    let mut s = String::from("hello, ");

    borrow_object(&mut s);

    println!("Success!");
}

fn borrow_object(s: &mut String) {}

9. ðŸŒŸðŸŒŸ

fn main() {
    let mut s = String::from("hello, ");

    borrow_object(&s);

    s.push_str("world");

    println!("Success!");
}

fn borrow_object(s: &String) {}

10. ðŸŒŸðŸŒŸ

fn main() {
    let mut s = String::from("hello, ");

    let r1 = &mut s;
    r1.push_str("world");
    let r2 = &mut s;
    r2.push_str("!");

    // println!("{}", r1);
}

11. ðŸŒŸðŸŒŸ

